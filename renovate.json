{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard"
  ],
  "packageRules": [
    {
      "matchPackageNames": ["react-native"],
      "groupName": "React Native core",
      "automerge": false,
      "reviewersFromCodeOwners": true
    },
    {
      "matchPackagePatterns": ["^@react-native/", "^react-native-"],
      "groupName": "React Native ecosystem",
      "automerge": false
    },
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true,
      "automergeType": "pr"
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "lockFileMaintenance": {
    "enabled": true
  }
}
