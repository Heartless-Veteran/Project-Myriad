{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":dependencyDashboard"],
  "packageRules": [
    {
      "matchPackageNames": ["com.android.tools.build:gradle"],
      "groupName": "Android Gradle Plugin",
      "automerge": false,
      "reviewersFromCodeOwners": true
    },
    {
      "groupName": "Kotlin ecosystem",
      "automerge": false,
      "matchPackageNames": ["org.jetbrains.kotlin:kotlin-gradle-plugin", "/^org\\.jetbrains\\.kotlin/"]
    },
    {
      "groupName": "Jetpack Compose",
      "automerge": true,
      "automergeType": "pr",
      "matchPackageNames": ["/^androidx\\.compose/"],
      "matchUpdateTypes": ["patch", "minor"]
    },
    {
      "groupName": "AndroidX libraries",
      "automerge": true,
      "automergeType": "pr",
      "matchPackageNames": ["/^androidx\\./"],
      "matchUpdateTypes": ["patch", "minor"]
    },
    {
      "groupName": "Hilt DI",
      "automerge": true,
      "automergeType": "pr",
      "matchPackageNames": ["/^com\\.google\\.dagger/"],
      "matchUpdateTypes": ["patch", "minor"]
    },
    {
      "matchDepTypes": ["testImplementation"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchPackageNames": ["gradle"],
      "groupName": "Gradle",
      "automerge": true,
      "automergeType": "pr",
      "matchUpdateTypes": ["patch", "minor"]
    },
    {
      "matchPackageNames": ["/^com\\.squareup\\.retrofit2/", "/^com\\.squareup\\.okhttp3/"],
      "groupName": "Square libraries",
      "automerge": true,
      "automergeType": "pr",
      "matchUpdateTypes": ["patch", "minor"]
    },
    {
      "matchPackageNames": ["/^org\\.jetbrains\\.kotlinx/"],
      "groupName": "Kotlinx libraries",
      "automerge": true,
      "automergeType": "pr",
      "matchUpdateTypes": ["patch", "minor"]
    },
    {
      "matchDepTypes": ["implementation"],
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchPackageNames": ["/^actions\\//"],
      "groupName": "GitHub Actions",
      "automerge": true,
      "automergeType": "pr"
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "automerge": true,
    "automergeType": "pr"
  },
  "lockFileMaintenance": {
    "enabled": false
  }
}
