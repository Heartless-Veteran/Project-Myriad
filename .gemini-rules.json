{
  "kotlin": {
    "enabled": true,
    "rules": {
      "coroutine-context": true,
      "compose-performance": true,
      "hilt-injection": true,
      "null-safety": true,
      "data-class-conventions": true
    }
  },
  "javascript": {
    "enabled": true,
    "rules": {
      "modern-syntax": true,
      "unused-imports": true,
      "async-await": true,
      "const-let": true
    }
  },
  "shell": {
    "enabled": true,
    "rules": {
      "shellcheck": true,
      "best-practices": true
    }
  },
  "fixCategories": {
    "security": true,
    "performance": true,
    "style": true,
    "architecture": false,
    "testing": false
  },
  "severityThreshold": "medium",
  "includePatterns": [
    "app/src/main/**/*.kt",
    "src/**/*.js",
    "src/**/*.ts",
    "scripts/**/*.js",
    "scripts/**/*.sh"
  ],
  "excludePatterns": [
    "**/test/**",
    "**/build/**",
    "**/node_modules/**",
    "**/*.generated.*"
  ],
  "modelSelection": {
    "defaultModel": "gemini-1.5-flash",
    "complexTaskModel": "gemini-1.5-pro",
    "complexityThresholds": {
      "fileSize": 50000,
      "issueCount": 10,
      "kotlinClass": true
    }
  }
}